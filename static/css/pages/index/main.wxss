@import "/static/css/vendor.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 240rpx;
}
.form-control {
  display: block;
  padding: 0 24rpx;
  margin-bottom: 10rpx;
  border: 2rpx solid #ccc;
}
.counter {
  display: inline-block;
  margin: 20rpx auto;
  padding: 10rpx 20rpx;
  color: blue;
  border: 2rpx solid blue;
}